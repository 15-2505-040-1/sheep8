<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cloud.sheep2.ShopActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="517dp"
        android:layout_height="866dp"
        android:layout_marginTop="99dp"
        android:scaleType="fitStart"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/house" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="99dp"
        android:layout_height="156dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.872"
        app:srcCompat="@drawable/oji5"
        app:layout_constraintHorizontal_bias="0.945"
        tools:layout_editor_absoluteY="308dp" />

    <Button
        android:id="@+id/chickenbtn"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#ffffffff"
        android:onClick="CHICKEN"
        android:text="鶏"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sheepbtn" />

    <Button
        android:id="@+id/cowbtn"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#ffffffff"
        android:onClick="COW"
        android:text="牛"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackbtn" />

    <Button
        android:id="@+id/horsebtn"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#ffffffff"
        android:onClick="HORSE"
        android:text="馬"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pigbtn" />

    <Button
        android:id="@+id/sheepbtn"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffffffff"
        android:onClick="SHEEP"
        android:text="羊"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/blackbtn"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffffffff"
        android:onClick="BLACK"
        android:text="黒羊"
        android:textSize="22sp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pigbtn"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffffffff"
        android:onClick="PIG"
        android:text="豚"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tradebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#ffffffff"
        android:onClick="onTradeTapped"
        android:text="交換"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="#ffffffff"
        android:onClick="onBack"
        android:text="戻る"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:background="#ffffffff"
        android:text="TextView"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="318dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ffffffff"
        android:onClick="onInventory"
        android:text="所持品"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horsebtn" />

    <ImageView
        android:id="@+id/huki"
        android:layout_width="102dp"
        android:layout_height="137dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/huki" />

    <ImageView
        android:id="@+id/animal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617"
        app:srcCompat="@drawable/buyo" />

    <TextView
        android:id="@+id/hukitxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="0dp"
        android:text="アイテムが\n\n  足りんぞ"
        android:textColor="#ff000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

</android.support.constraint.ConstraintLayout>
